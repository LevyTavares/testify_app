{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  },
  // Evita erro de schema 429 ao validar app.json (VS Code tentando baixar schema do GitHub)
  "json.schemaDownload.enable": false,
  // Desliga validação JSON no workspace para não bloquear por causa de schema externo
  "json.validate.enable": false
}
