{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  },
  // Evita erro de schema 429 ao validar app.json (VS Code tentando baixar schema do GitHub)
  "json.schemaDownload.enable": false,
  // Reativa validação JSON usando um schema local para app.json
  "json.validate.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["/app.json", "app.json"],
      "url": "/home/levy/testify/testify_app/.vscode/app.schema.json"
    }
  ]
}
